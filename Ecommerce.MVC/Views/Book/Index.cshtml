@Model.Count

@{
}

<a asp-action="Create">go to Card</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Author</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (GetAllBooksDTO prod in Model.Entities)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td>@prod.AuthorName</td>
                <td>
                    <a asp-action="Update" asp-route-id="@prod.Id">Update</a> |
                    <a asp-action="Details" asp-route-id="@prod.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@prod.Id">Delete</a>
                    <a asp-action="AddCard" asp-route-id="@prod.Id">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
