@model CreateUpdateDeleteDto
@{
    ViewData["Title"] = "Create";
    SelectList list = new SelectList(ViewBag.authors, "Id", "Name");
}

<h1>Create</h1>
<form method="post"> 
    <div asp-validation-summary="All" class="text-danger"> </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" style="color:red"></span>

    </div>
    
    <div>
        <label asp-for="AuthorId"></label>
        <select asp-for="AuthorId" asp-items="list"></select>
    </div>
    <button type="submit">Create</button>
</form>
